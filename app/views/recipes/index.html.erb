<% provide(:title, 'All Recipes') %>
<div class="container">
<h1 class="col-sm-12">Recipes</h1>
<p class="col-sm-8">A list of all recipes tracked by the system.</p>
<%= link_to action: "new" do %>
<button class="col-sm-3 btn btn-primary">New Recipe</button>
<% end %>
</div>
<ul class="list-group">
  <% @recipes.each do |r| %>
  <li class="list-group-item">
    <div class="container">
      <div class="col-sm-8">
        <span class="recipe-title"><%= r.title.capitalize %></span>
      </div>
      <div class="col-sm-4">
      <%= link_to r do %>
      <button class='btn btn-info'>View</button>
      <% end %>
      <button class="btn btn-success">Add</button>
      </div>
      <!-- <p><span class="recipe-ingredient"></span> -->
      <!--   <span class="recipe-amount"></span> -->
      <!-- </p> -->
    </div>
  </li>
  <% end %>
  
</ul>
